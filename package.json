{
  "name": "tft-meta-analyzer-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm install && turbo dev",
    "dev:backend": "turbo dev --filter=@tft-meta-analyzer/backend",
    "dev:frontend": "turbo dev --filter=@tft-meta-analyzer/frontend",
    "build": "pnpm install && turbo build",
    "build:backend": "turbo build --filter=@tft-meta-analyzer/backend...",
    "build:frontend": "turbo build --filter=@tft-meta-analyzer/frontend...",
    "start": "cd backend && npm start",
    "deploy:render": "turbo build --filter=@tft-meta-analyzer/backend...",
    "deploy:cloudflare": "turbo build --filter=@tft-meta-analyzer/frontend...",
    "test": "turbo test",
    "test:backend": "turbo test --filter=@tft-meta-analyzer/backend",
    "test:frontend": "turbo test --filter=@tft-meta-analyzer/frontend",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "install-all": "pnpm install",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:scripts": "echo 'Available test scripts:' && npm run test:scripts:list",
    "test:scripts:list": "echo '  npm run test:api:basic\\n  npm run test:frontend:debug\\n  npm run test:frontend:data\\n  npm run test:frontend:manual\\n  npm run test:integration\\n  npm run script:check-traits\\n  npm run script:fix-decktier-traits\\n  npm run script:debug-server'",
    "test:api:basic": "tsx scripts/test/api/basic-api-test.js",
    "test:frontend:debug": "tsx scripts/test/frontend/context-debug.js",
    "test:frontend:data": "tsx scripts/test/frontend/data-processing-test.js",
    "test:frontend:manual": "tsx scripts/test/frontend/context-manual-test.js",
    "test:integration": "tsx scripts/test/integration/system-integration-test.js",
    "script:check-traits": "tsx backend/scripts/utils/check-traits.ts",
    "script:fix-decktier-traits": "tsx backend/scripts/utils/fix-decktier-traits.ts",
    "script:debug-server": "tsx backend/scripts/debug/debug-server.ts",
    "turbo:build": "turbo build",
    "turbo:dev": "turbo dev",
    "turbo:test": "turbo test",
    "turbo:lint": "turbo lint",
    "turbo:type-check": "turbo type-check",
    "turbo:clean": "turbo clean",
    "docs:adr-index": "tsx scripts/generate-adr-index.js",
    "docs:update": "npm run docs:adr-index",
    "security:audit": "audit-ci --config .audit-ci.json",
    "security:check": "tsx scripts/security/audit-check.ts",
    "security:update": "tsx scripts/security/dependency-update.ts",
    "security:scan": "tsx scripts/security/vulnerability-scan.ts",
    "code:analyze": "tsx scripts/code-analysis/duplicate-finder.ts",
    "code:deps": "tsx scripts/code-analysis/dependency-analyzer.ts",
    "code:refactor": "tsx scripts/code-analysis/refactor-suggestions.ts"
  },
  "packageManager": "pnpm@9.15.9",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.51"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.0.12",
    "audit-ci": "^7.1.0",
    "eslint": "^9.30.1",
    "jest": "^30.0.4",
    "jscpd": "^4.0.5",
    "madge": "^8.0.0",
    "nodemon": "^3.1.7",
    "npm-check-updates": "^17.1.7",
    "pnpm": "^10.13.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3",
    "vite": "^5.4.0"
  }
}
