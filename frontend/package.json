{
  "name": "@tft-meta-analyzer/frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:unix",
    "dev:win": "npx vite",
    "dev:unix": "npx vite",
    "build": "npx vite build",
    "build:analyze": "npx vite build && echo 'ðŸ“Š Bundle analysis saved to dist/stats.html' && echo 'ðŸ“ˆ Opening bundle analyzer...' && node scripts/bundle-analyzer.js",
    "lint": "eslint . --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "npx vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "bundle:check": "bundlesize",
    "bundle:monitor": "tsx scripts/bundle-monitor.ts",
    "bundle:budget": "tsx scripts/performance-budget.ts"
  },
  "bundlesize": [
    {
      "path": "dist/assets/*.js",
      "maxSize": "500 kB",
      "compression": "gzip"
    },
    {
      "path": "dist/assets/index-*.js",
      "maxSize": "200 kB",
      "compression": "gzip"
    },
    {
      "path": "dist/assets/vendor-*.js",
      "maxSize": "800 kB",
      "compression": "gzip"
    },
    {
      "path": "dist/assets/*.css",
      "maxSize": "100 kB",
      "compression": "gzip"
    }
  ],
